<p><%= link_to "Back to products", products_path %> |
<%= link_to "Edit", edit_product_path(@product) %> | </p>

<p><b>Name:</b> <%= @product[:name] %><br>
<b>Description:</b> <%= @product[:description] %><br>
<b>Price:</b> $<%= @product.formatted_price %></p>


<% if current_user %>

  <h3>Reviews</h3>

  <p>Reviews for <%= @product.name %></p>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.email %></em>
        Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>
  <% end %>